@model ReviewViewModel

@{
    ViewData["Title"] = "Create Review";
}

<h1 class="mt-4">Create your Review</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="ProductId"/>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" max="5" min="0" oninput="this.value=(parseInt(this.value)||0)" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleReview" class="control-label"></label>
                <input asp-for="TitleReview" class="form-control" />
                <span asp-validation-for="TitleReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewText" class="control-label"></label>
                <input asp-for="ReviewText" class="form-control" />
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Profile" asp-controller="Home">Back to profile</a>
</div>

