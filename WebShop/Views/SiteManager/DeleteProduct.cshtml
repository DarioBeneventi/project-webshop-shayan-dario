@model Product

@{
    ViewData["Title"] = "Delete Product";
    var photoPath = $"~/Images/{Model.PhotoPath ?? "noimage.png"}";
}

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Name</h1>
                </div>
                <div class="card-body text-center">
                    <h3>Are you sure you want to delete this?</h3>
                    <img class="card-img-top imageThumbnail" asp-append-version="true" src="@photoPath" />
                    <h4>Product ID: @Model.ProductId</h4>
                    <h4>Brand: @Model.Brand</h4>
                    <p>Description: @Model.Description</p>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="DeleteSure" asp-controller="SiteManager" asp-route-id="@Model.ProductId" method="post" class="d-inline-block">
                        <input hidden asp-for="ProductId"/>
                        <button type="submit" class="btn btn-danger" style="width:auto;">Sure to Delete</button>
                    </form>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>